<div id="registration-page" class="col-8 mx-auto">
  <div class="my-5">
    <h2>Registrazione</h2>
    <span>Preparati a condividere e organizzare la tua vita come non hai mai fatto prima!</span>
  </div>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <form>
    <div class="form-group">
      <%#= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control", placeholder:"Nome e cognome" %>
    </div>

    <!--<div class="form-group">
      <%#= f.label :image %>
      <%#= f.file_field :image, class:"form-control", placeholder:"Foto profilo" %>
    </div>-->

    <div class="form-group">
      <%#= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", class:"form-control", placeholder:"Email" %>
    </div>
    <div class="row">
      <div class="col col-6">
        <div class="form-group">
          <%#= f.label :password %>
          <%
=begin%>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%
=end%>
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"Password" %>
        </div>
      </div>
      <div class="col col-6">
        <div class="form-group">
          <%#= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Conferma password" %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.submit "Sign up" , style:"background-color: #3282b8;",class:"btn" %>
    </div>
  </form>
  <% end %>
  <span>
    Sei gi√† registrato?
    <%= render "devise/shared/links" %>
  </span>
</div>